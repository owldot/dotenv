{
    "workbench.panel.defaultLocation": "right",
    "workbench.startupEditor": "none",
    "terminal.integrated.sendKeybindingsToShell": true,
    "files.trimTrailingWhitespace": true,
    "editor.tabSize": 2,
    "files.autoSave": "onFocusChange",
    "editor.formatOnType": true,
    "editor.cursorBlinking": "smooth",
    "editor.links": false,
    //  "editor.fontFamily": "GoMono Nerd Font",
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 16,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairs": "active",
    "editor.guides.bracketPairsHorizontal": false,
    "editor.hover.delay": 1000,
    "workbench.colorTheme": "Tokyo Night Light",
    "workbench.colorCustomizations": {
        "[Tokyo Night]": {
            "tab.activeBackground": "#313750",
            "editorWhitespace.foreground": "#173742",
            "editorBracketPairGuide.activeBackground1": "#0fbd9a",
            "editorBracketPairGuide.activeBackground2": "#4b75cb",
            "editorBracketPairGuide.activeBackground3": "#a366d9",
            "editorBracketPairGuide.activeBackground4": "#d0719b",
            "editorBracketPairGuide.activeBackground5": "#83D6C5",
            "editorBracketPairGuide.activeBackground6": "#e5ee6c",
        },
        "[Tokyo Night Light]": {
            "editor.background": "#f4fbea",
            "tab.activeBackground": "#8fbed9",
            "editorWhitespace.foreground": "#ace5b3",
            "editorLineNumber.activeForeground":"#045c3a",
            "editor.lineHighlightBackground":"#35cf4022",
            "editorBracketPairGuide.activeBackground1": "#096c58",
            "editorBracketPairGuide.activeBackground2": "#3c5ea3",
            "editorBracketPairGuide.activeBackground3": "#7d4ea7",
            "editorBracketPairGuide.activeBackground4": "#a5597c",
            "editorBracketPairGuide.activeBackground5": "#619e92",
            "editorBracketPairGuide.activeBackground6": "#a0a64b",
        },
      "[Spinel]": {"editor.background":"#111111"},
      "[Tokyo Night Storm]": {
        "tab.activeForeground": "#e6eaff",
        "tab.inactiveForeground": "#959cbd",
        "tab.unfocusedActiveForeground":"#b0b9e1",
        "tab.selectedForeground": "#ffffff",
        "tab.activeBackground": "#480056",
        "editor.background": "#111122"
      }
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": ["keyword.control.def.ruby", "keyword.control.ruby","meta.function-call.ruby", "variable.parameter.function.ruby"],
                   "settings": {
                       "fontStyle": "",
                    //    "foreground": "#9d3535"
                    //    "foreground": "#65359D"
                   }
               },

            {
             "scope": "entity.name.function.ruby",
                "settings": {
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "entity.name.type.class.ruby",
                "settings": {
                    "fontStyle": "bold"
                }
            },
        ],
        "[Spinel]": {
            "textMateRules": [
