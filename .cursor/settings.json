                //     }
                // },
                // {
                //     "scope": [
                //         "constant",
                //         "constant.language.symbol.ruby"
                //     ],
                //     "settings": {
                //         "foreground": "#20a801"
                //     }
                // },
                // {
                //     "scope": [
