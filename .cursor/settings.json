                //         "foreground": "#83fbff"
                //     }
                // }
            ]
        }
    },
    "remote.SSH.defaultExtensions": [
        "eamodio.gitlens"
    ],
    "gitlens.hovers.currentLine.over": "annotation",
    "editor.renderWhitespace": "all",
    "gitlens.heatmap.toggleMode": "file",
    "gitlens.blame.line.enabled": true,
    "gitlens.statusBar.enabled": true,
    "prettier.singleQuote": true,
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.formatOnSave": false
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "ruby.format": false,
    "ruby.useLanguageServer": false,
    "[ruby]": {
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "editor.defaultFormatter": "Shopify.ruby-lsp",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": true,
        "editor.formatOnType": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "editor.rulers": [
            120
        ]
    },
    "ruby.lint": {
        "rubocop": false
    },
    "editor.formatOnSaveTimeout": 1500,
    "editor.minimap.enabled": false,
    "explorer.confirmDelete": false,
    "prettier.arrowParens": "always",
    "prettier.trailingComma": "none",
    "diffEditor.ignoreTrimWhitespace": false,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "typescript.preferences.quoteStyle": "double",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "gitlens.blame.heatmap.location": "left",
    "scm.diffDecorationsGutterWidth": 5,
    "editor.rulers": [
        120
    ],
    "workbench.editor.wrapTabs": true,
    "debug.console.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "debug.internalConsoleOptions": "neverOpen",
    "editor.inlineSuggest.enabled": true,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "files.insertFinalNewline": true,
    "editor.formatOnSaveMode": "file",
    "git.ignoreMissingGitWarning": true,
    "terminal.integrated.scrollback": 5000,
    "bookmarks.saveBookmarksInProject": true,
    "workbench.settings.applyToAllProfiles": [
        "bookmarks.saveBookmarksInProject"
    ],
    "editor.inlayHints.enabled": "offUnlessPressed",
    "github.copilot.advanced": {},
    "window.zoomLevel": 1,
    "remote.SSH.connectTimeout": 150,
    "editor.multiCursorModifier": "ctrlCmd",
    "github.copilot.editor.enableAutoCompletions": true,
    "workbench.iconTheme": "eq-material-theme-icons-deepforest",
    // "workbench.colorTheme": "Tokyo Night Storm",
    "git.openRepositoryInParentFolders": "always",
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.preferredDarkColorTheme": "Tokyo Night",
    "workbench.preferredLightColorTheme": "Tokyo Night Light",
    "cursor.composer.shouldAllowCustomModes": true
}
